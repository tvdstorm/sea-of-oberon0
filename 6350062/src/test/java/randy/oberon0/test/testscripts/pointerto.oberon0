MODULE Pointerto;

TYPE LinkedList = POINTER TO LinkedListStruct;
LinkedListStruct = RECORD
content: INTEGER;
next: LinkedList
END;
VAR list: LinkedList;
input: INTEGER;

PROCEDURE addNew(VAR ll: LinkedList; in: INTEGER);
VAR temp: LinkedList;
BEGIN
	NEW(temp);
	temp.next := ll;
	temp.content := in;
	ll := temp
END addNew;

BEGIN

Read(input);
WHILE input # 0 DO
	addNew(list, input);
	Read(input)
END;

WHILE list # NIL DO
	Write(list.content);
	list := list.next;
END;

END Pointerto.

